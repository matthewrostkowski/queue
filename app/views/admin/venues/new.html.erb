<div class="max-w-3xl mx-auto">
  <div class="mb-8">
    <h1 class="text-3xl font-bold mb-2">Create New Venue</h1>
    <p class="text-[color:var(--muted)]">Add a new venue to the system</p>
  </div>

  <div class="rounded-2xl border border-white/10 bg-[color:var(--bg-elev)] shadow-lg p-8">
    <%= form_with model: [:admin, @venue], local: true do |f| %>
      <% if @venue.errors.any? %>
        <div class="mb-6 p-4 rounded-lg bg-red-50 border border-red-200 text-red-900">
          <h4 class="font-semibold mb-2">Please fix the following errors:</h4>
          <ul class="list-disc list-inside text-sm">
            <% @venue.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium mb-1.5">Venue Name *</label>
          <%= f.text_field :name, required: true, class: "w-full rounded-lg border border-white/15 bg-white/5 px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-[color:var(--primary)]/50 focus:border-transparent", placeholder: "e.g., The Blue Note" %>
        </div>
        
        <div>
          <label class="block text-sm font-medium mb-1.5">Location</label>
          <%= f.text_field :location, class: "w-full rounded-lg border border-white/15 bg-white/5 px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-[color:var(--primary)]/50 focus:border-transparent", placeholder: "e.g., 123 Main St, New York, NY" %>
        </div>
        
        <div>
          <label class="block text-sm font-medium mb-1.5">Capacity</label>
          <%= f.number_field :capacity, min: 1, class: "w-full rounded-lg border border-white/15 bg-white/5 px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-[color:var(--primary)]/50 focus:border-transparent", placeholder: "e.g., 200" %>
        </div>
      </div>
      
      <div class="mt-6 flex gap-3">
        <%= f.submit "Create Venue", class: "inline-flex items-center gap-2 rounded-lg px-4 py-2 font-medium bg-[color:var(--primary)] text-white hover:opacity-90 transition-all cursor-pointer" %>
        <%= link_to "Cancel", admin_venues_path, class: "inline-flex items-center gap-2 rounded-lg px-4 py-2 font-medium bg-white/5 border border-white/15 hover:bg-white/10 transition-all" %>
      </div>
    <% end %>
  </div>
</div>
