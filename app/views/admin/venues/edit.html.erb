<div class="max-w-4xl mx-auto">
  <div class="mb-8">
    <h1 class="text-3xl font-bold mb-2">Edit Venue</h1>
    <p class="text-[color:var(--muted)]">Update venue information and pricing settings</p>
  </div>

  <!-- Basic Info -->
  <div class="rounded-2xl border border-white/10 bg-[color:var(--bg-elev)] shadow-lg p-8 mb-6">
    <h2 class="text-xl font-semibold mb-6">Basic Information</h2>
    
    <%= form_with model: [:admin, @venue], local: true do |f| %>
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium mb-1.5">Venue Name</label>
          <%= f.text_field :name, class: "w-full rounded-lg border border-white/15 bg-white/5 px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-[color:var(--primary)]/50 focus:border-transparent" %>
        </div>
        
        <div>
          <label class="block text-sm font-medium mb-1.5">Location</label>
          <%= f.text_field :location, class: "w-full rounded-lg border border-white/15 bg-white/5 px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-[color:var(--primary)]/50 focus:border-transparent" %>
        </div>
        
        <div>
          <label class="block text-sm font-medium mb-1.5">Capacity</label>
          <%= f.number_field :capacity, class: "w-full rounded-lg border border-white/15 bg-white/5 px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-[color:var(--primary)]/50 focus:border-transparent" %>
        </div>
      </div>
      
      <div class="mt-6">
        <%= f.submit "Update Venue", class: "inline-flex items-center gap-2 rounded-lg px-4 py-2 font-medium bg-[color:var(--primary)] text-white hover:opacity-90 transition-all cursor-pointer" %>
      </div>
    <% end %>
  </div>

  <!-- Pricing Settings -->
  <div class="rounded-2xl border border-white/10 bg-[color:var(--bg-elev)] shadow-lg p-8">
    <h2 class="text-xl font-semibold mb-6">Dynamic Pricing Settings</h2>
    
    <%= form_with model: @venue, url: update_pricing_admin_venue_path(@venue), method: :patch, local: true do |f| %>
      <div class="space-y-6">
        <!-- Pricing Enabled Toggle -->
        <div class="flex items-center justify-between p-4 bg-white/5 rounded-lg">
          <div>
            <label class="text-sm font-medium">Enable Dynamic Pricing</label>
            <p class="text-xs text-[color:var(--muted)]">Turn on/off pricing for this venue</p>
          </div>
          <%= f.check_box :pricing_enabled, class: "w-4 h-4 rounded border-gray-300 text-[color:var(--primary)] focus:ring-[color:var(--primary)]" %>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <!-- Base Price -->
          <div>
            <label class="block text-sm font-medium mb-1.5">Base Price (cents)</label>
            <%= f.number_field :base_price_cents, class: "w-full rounded-lg border border-white/15 bg-white/5 px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-[color:var(--primary)]/50 focus:border-transparent" %>
            <p class="text-xs text-[color:var(--muted)] mt-1">Default: 100 cents ($1.00)</p>
          </div>
          
          <!-- Price Multiplier -->
          <div>
            <label class="block text-sm font-medium mb-1.5">Price Multiplier</label>
            <%= f.number_field :price_multiplier, step: 0.1, class: "w-full rounded-lg border border-white/15 bg-white/5 px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-[color:var(--primary)]/50 focus:border-transparent" %>
            <p class="text-xs text-[color:var(--muted)] mt-1">Default: 1.0 (no change)</p>
          </div>
          
          <!-- Min Price -->
          <div>
            <label class="block text-sm font-medium mb-1.5">Minimum Price (cents)</label>
            <%= f.number_field :min_price_cents, class: "w-full rounded-lg border border-white/15 bg-white/5 px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-[color:var(--primary)]/50 focus:border-transparent" %>
            <p class="text-xs text-[color:var(--muted)] mt-1">Default: 1 cent</p>
          </div>
          
          <!-- Max Price -->
          <div>
            <label class="block text-sm font-medium mb-1.5">Maximum Price (cents)</label>
            <%= f.number_field :max_price_cents, class: "w-full rounded-lg border border-white/15 bg-white/5 px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-[color:var(--primary)]/50 focus:border-transparent" %>
            <p class="text-xs text-[color:var(--muted)] mt-1">Default: 50000 cents ($500)</p>
          </div>
        </div>
        
        <!-- Peak Hours Section -->
        <div class="border-t border-white/10 pt-6">
          <h3 class="text-lg font-semibold mb-4">Peak Hours Configuration</h3>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <!-- Peak Hours Start -->
            <div>
              <label class="block text-sm font-medium mb-1.5">Peak Hours Start</label>
              <%= f.number_field :peak_hours_start, min: 0, max: 23, class: "w-full rounded-lg border border-white/15 bg-white/5 px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-[color:var(--primary)]/50 focus:border-transparent" %>
              <p class="text-xs text-[color:var(--muted)] mt-1">24-hour format (0-23)</p>
            </div>
            
            <!-- Peak Hours End -->
            <div>
              <label class="block text-sm font-medium mb-1.5">Peak Hours End</label>
              <%= f.number_field :peak_hours_end, min: 0, max: 23, class: "w-full rounded-lg border border-white/15 bg-white/5 px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-[color:var(--primary)]/50 focus:border-transparent" %>
              <p class="text-xs text-[color:var(--muted)] mt-1">24-hour format (0-23)</p>
            </div>
            
            <!-- Peak Hours Multiplier -->
            <div>
              <label class="block text-sm font-medium mb-1.5">Peak Hours Multiplier</label>
              <%= f.number_field :peak_hours_multiplier, step: 0.1, class: "w-full rounded-lg border border-white/15 bg-white/5 px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-[color:var(--primary)]/50 focus:border-transparent" %>
              <p class="text-xs text-[color:var(--muted)] mt-1">Default: 1.5x</p>
            </div>
          </div>
        </div>
        
        <!-- Pricing Preview -->
        <div class="border-t border-white/10 pt-6">
          <h3 class="text-lg font-semibold mb-4">Pricing Preview</h3>
          <div class="bg-white/5 rounded-lg p-4 space-y-2 text-sm">
            <p><strong>Normal Hours:</strong> Base price × <%= @venue.price_multiplier || 1.0 %> = $<%= '%.2f' % ((@venue.base_price_cents * (@venue.price_multiplier || 1.0)) / 100.0) %></p>
            <p><strong>Peak Hours:</strong> Base price × <%= @venue.price_multiplier || 1.0 %> × <%= @venue.peak_hours_multiplier || 1.5 %> = $<%= '%.2f' % ((@venue.base_price_cents * (@venue.price_multiplier || 1.0) * (@venue.peak_hours_multiplier || 1.5)) / 100.0) %></p>
            <p class="text-xs text-[color:var(--muted)] mt-2">*Actual prices will vary based on demand, queue position, and other factors</p>
          </div>
        </div>
      </div>
      
      <div class="mt-6 flex gap-3">
        <%= f.submit "Save Pricing Settings", class: "inline-flex items-center gap-2 rounded-lg px-4 py-2 font-medium bg-[color:var(--primary)] text-white hover:opacity-90 transition-all cursor-pointer" %>
        <%= link_to "Cancel", admin_venues_path, class: "inline-flex items-center gap-2 rounded-lg px-4 py-2 font-medium bg-white/5 border border-white/15 hover:bg-white/10 transition-all" %>
      </div>
    <% end %>
  </div>
</div>
