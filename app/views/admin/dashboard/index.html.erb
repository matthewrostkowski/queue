<div class="admin-dashboard-page">
  <h1 class="page-title">Admin Dashboard</h1>

  <div class="dashboard-cards">
    <div class="stat-card">
      <h2>Total Users</h2>
      <p><%= @total_users %></p>
    </div>

    <div class="stat-card">
      <h2>Total Venues</h2>
      <p><%= @total_venues %></p>
    </div>

    <div class="stat-card">
      <h2>Active Sessions</h2>
      <p><%= @active_sessions %></p>
    </div>

    <div class="stat-card">
      <h2>Total Songs</h2>
      <p><%= @total_songs %></p>
    </div>
  </div>
</div>

<style>
  /* Scope everything inside .admin-dashboard-page so navbar/global styles remain untouched */
  .admin-dashboard-page {
    padding: 2rem;
  }

  .admin-dashboard-page .page-title {
    color: #0a0a0b;
    font-weight: 700;
    font-size: 26px;
    margin-bottom: 1.5rem;
  }

  .admin-dashboard-page .dashboard-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.5rem;
  }

  .admin-dashboard-page .stat-card {
    background: var(--bg-elev);
    border: 1px solid #2a2a2a;
    border-radius: 12px;
    padding: 1.5rem;
    text-align: center;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .admin-dashboard-page .stat-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.4);
  }

  .admin-dashboard-page .stat-card h2 {
    font-size: 16px;
    color: #0a0a0b;
    text-transform: uppercase;
    letter-spacing: 0.6px;
    margin-bottom: 0.75rem;
  }

  .admin-dashboard-page .stat-card p {
    font-size: 28px;
    font-weight: 700;
    color: #fff;
    margin: 0;
  }

  /* Add subtle color accents per category for variety */
  .admin-dashboard-page .stat-card:nth-child(1) p { color: #1ed760; }  /* users */
  .admin-dashboard-page .stat-card:nth-child(2) p { color: #0af; }    /* venues */
  .admin-dashboard-page .stat-card:nth-child(3) p { color: #ffa500; } /* sessions */
  .admin-dashboard-page .stat-card:nth-child(4) p { color: #ff5555; } /* songs */
</style>
