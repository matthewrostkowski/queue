<div class="profile-container">
  <h1>@<%= @user.display_name %></h1>
  
  <div class="stats-section">
    <div class="stat">
      <span class="stat-label">Songs Queued</span>
      <span class="stat-value"><%= @user.queue_items.count %></span>
    </div>
    <div class="stat">
      <span class="stat-label">Total Upvotes</span>
      <span class="stat-value"><%= @user.total_upvotes_received %></span>
    </div>
  </div>

  <div class="queue-items-section">
    <h2>My Queue History</h2>
    
    <% if @user.queue_items.empty? %>
      <p class="empty-state">You haven't queued any songs yet</p>
    <% else %>
      <div class="queue-items-list">
        <% @user.queue_items.order(created_at: :desc).each do |item| %>
          <div class="queue-item">
            <div class="song-info">
              <div class="song-title"><%= item.title %></div>
              <div class="song-artist"><%= item.artist %></div>
            </div>
            <div class="item-stats">
              <span class="upvotes">üëç <%= item.vote_count %></span>
              <span class="status-badge <%= item.status %>"><%= item.status %></span>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
