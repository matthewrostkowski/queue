<div class="max-w-4xl mx-auto">
  <div class="rounded-2xl border border-white/10 bg-[color:var(--bg-elev)] shadow-lg p-8" data-testid="login-form">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold mb-3">Welcome to Queue</h1>
      <p class="text-[color:var(--muted)] text-lg">Queue your songs, upvote others, and shape the vibe in real time.</p>
    </div>

    <% if flash[:alert].present? %>
      <div class="mb-6 p-4 rounded-lg bg-red-50 border border-red-200 text-red-900 text-sm">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <div class="grid md:grid-cols-2 gap-6 mb-6">
      <!-- General User Sign In -->
      <div class="space-y-4">
        <h3 class="text-lg font-semibold">Sign in</h3>
        <%= form_with url: session_path, method: :post, local: true, class: "space-y-4" do %>
          <%= hidden_field_tag :provider, "general_user" %>
          <div>
            <input type="email" 
                   name="email" 
                   placeholder="Email" 
                   required
                   class="w-full rounded-lg border border-white/15 bg-white/5 px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-[color:var(--primary)]/50 focus:border-transparent placeholder:text-[color:var(--muted)]" />
          </div>
          <div>
            <input type="password" 
                   name="password" 
                   placeholder="Password" 
                   required
                   class="w-full rounded-lg border border-white/15 bg-white/5 px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-[color:var(--primary)]/50 focus:border-transparent placeholder:text-[color:var(--muted)]" />
          </div>
          <button type="submit" 
                  class="w-full inline-flex items-center justify-center gap-2 rounded-lg px-4 py-2.5 font-medium bg-[color:var(--primary)] text-white hover:opacity-90 transition-all focus:outline-none focus:ring-2 focus:ring-[color:var(--primary)]/50 focus:ring-offset-2">
            Sign in
          </button>
        <% end %>
        <p class="text-sm text-center text-[color:var(--muted)]">
          No account? <%= link_to "Sign up", signup_path, class: "text-[color:var(--primary)] hover:underline" %>
        </p>
      </div>

      <!-- Continue as Guest -->
      <div class="space-y-4">
        <h3 class="text-lg font-semibold">Continue as Guest</h3>
        <%= form_with url: session_path, method: :post, local: true, class: "space-y-4" do %>
          <%= hidden_field_tag :provider, "guest" %>
          <div>
            <input type="text"
                   name="display_name"
                   placeholder="Your name (optional)"
                   class="w-full rounded-lg border border-white/15 bg-white/5 px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-[color:var(--primary)]/50 focus:border-transparent placeholder:text-[color:var(--muted)]" />
          </div>
          <button id="continue-as-guest"
                  type="submit"
                  class="w-full inline-flex items-center justify-center gap-2 rounded-lg px-4 py-2.5 font-medium bg-[color:var(--primary)] text-white hover:opacity-90 transition-all focus:outline-none focus:ring-2 focus:ring-[color:var(--primary)]/50 focus:ring-offset-2">
            Continue as Guest
          </button>
        <% end %>
      </div>
    </div>
    
    <!-- OAuth Section -->
    <div class="pt-6 border-t border-white/10">
      <h3 class="text-lg font-semibold mb-4">Or sign in with Google</h3>
      <a href="/auth/google_oauth2" class="block">
        <button type="button"
                class="w-full inline-flex items-center justify-center gap-3 rounded-lg px-4 py-2.5 font-medium bg-white border border-gray-300 text-gray-700 hover:bg-gray-50 transition-all focus:outline-none focus:ring-2 focus:ring-[color:var(--primary)]/50 focus:ring-offset-2">
          <svg class="w-5 h-5" viewBox="0 0 24 24">
            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
          </svg>
          Sign in with Google
        </button>
      </a>
    </div>
  </div>
</div>
