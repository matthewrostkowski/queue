<div class="min-h-screen flex items-center justify-center p-4">
  <div class="bg-[color:var(--bg-elev)] rounded-lg shadow-2xl p-8 max-w-md w-full" data-testid="scan-page">
    <!-- Spec expects 'Scan' text on the page -->
    <div class="text-center mb-4">
      <h1 class="text-xl font-semibold text-[color:var(--fg)]">Scan</h1>
    </div>

    <div class="text-center mb-8">
      <div class="text-5xl mb-4">ðŸŽµ</div>
      <h2 class="text-3xl font-bold text-[color:var(--fg)]">Queue Music</h2>
      <p class="text-[color:var(--muted)] mt-2">Enter a venue code to join their music queue and start adding songs!</p>
    </div>

    <% if @error.present? %>
      <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
        <p class="text-red-700 font-semibold"><%= @error %></p>
      </div>
    <% end %>

    <%= form_with(url: join_path, method: :post, local: true) do |form| %>
      <div class="mb-6">
        <%= form.label :join_code, "Venue Code", class: "block text-sm font-semibold text-[color:var(--muted)] mb-2" %>
        <%= form.text_field :join_code,
            placeholder: "Enter 6-digit code",
            maxlength: 6,
            inputmode: "numeric",
            autofocus: true,
            class: "w-full px-4 py-3 border-2 border-[color:var(--border)] rounded-lg text-center text-2xl font-mono font-bold tracking-widest focus:outline-none focus:border-[color:var(--primary)] bg-white/5",
            autocomplete: "off" %>
        <p class="text-xs text-[color:var(--muted)] mt-2">Ask the host for the 6-digit code.</p>
      </div>

      <%= form.submit "Join Queue", 
          class: "w-full px-6 py-3 bg-[color:var(--primary)] text-black rounded-lg hover:opacity-90 font-bold text-lg transition" %>
    <% end %>

    <div class="mt-6 pt-6 border-t border-[color:var(--border)] text-center space-y-2">
      <p class="text-sm text-[color:var(--muted)]">
        Don't have a code? Visit a participating venue to get one.
      </p>
      <p class="text-sm text-[color:var(--muted)]">
        <%= link_to "Back to Search", search_path, class: "text-[color:var(--primary)] hover:text-[color:var(--primary)]/80 font-semibold" %>
        &nbsp;|&nbsp;
        <%= link_to "Back to Main", mainpage_path, class: "text-[color:var(--primary)] hover:text-[color:var(--primary)]/80 font-semibold" %>
      </p>
    </div>

    <!-- Help section -->
    <div class="mt-8 p-4 bg-[color:var(--primary)]/10 rounded-lg">
      <h3 class="font-semibold text-[color:var(--fg)] mb-2">How it works:</h3>
      <ol class="text-sm text-[color:var(--muted)] space-y-1">
        <li>âœ… Enter the venue code</li>
        <li>âœ… Search for songs</li>
        <li>âœ… Add to the queue</li>
        <li>âœ… Vote on songs!</li>
      </ol>
    </div>
  </div>
</div>

<script>
  // Only allow numbers in join_code input
  document.addEventListener('DOMContentLoaded', function() {
    const input = document.querySelector('input[name="join_code"]');
    if (input) {
      input.addEventListener('input', function() {
        this.value = this.value.replace(/[^0-9]/g, '');
      });
    }
  });
</script>
