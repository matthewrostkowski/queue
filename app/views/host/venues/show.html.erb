<div class="max-w-4xl mx-auto p-6">
  <div class="rounded-2xl border border-white/10 bg-[color:var(--bg-elev)] shadow-lg p-8 mb-6">
    <h1 class="text-3xl font-bold mb-3"><%= @venue.name %></h1>
    <p class="text-[color:var(--muted)] text-lg">ğŸ“ <%= @venue.location %> ğŸ‘¥ Capacity: <%= @venue.capacity %></p>
  </div>

  <div class="grid md:grid-cols-2 gap-6">
    <div class="rounded-2xl border border-white/10 bg-[color:var(--bg-elev)] shadow-lg p-8">
      <h2 class="text-2xl font-bold mb-4">Session Control</h2>
      <% if @active_session %>
        <div id="session-controls" class="space-y-4">
          <p class="text-lg">Join Code: <strong class="text-[color:var(--primary)]"><%= @active_session.join_code %></strong></p>
          <div class="flex flex-wrap gap-4">
            <% if @active_session.status == 'active' %>
              <%= button_to "Pause Session", pause_host_queue_session_path(@active_session), method: :patch, local: true, class: "inline-flex items-center justify-center gap-2 rounded-lg px-4 py-2.5 font-medium bg-yellow-500 text-white hover:opacity-90 transition-all" %>
            <% elsif @active_session.status == 'paused' %>
              <%= button_to "Resume Session", resume_host_queue_session_path(@active_session), method: :patch, local: true, class: "inline-flex items-center justify-center gap-2 rounded-lg px-4 py-2.5 font-medium bg-green-500 text-white hover:opacity-90 transition-all" %>
            <% end %>
            <%= button_to "End Session", end_host_queue_session_path(@active_session), method: :patch, local: true, class: "inline-flex items-center justify-center gap-2 rounded-lg px-4 py-2.5 font-medium bg-red-500 text-white hover:opacity-90 transition-all" %>
            <%= button_to "Regenerate Code", regenerate_code_host_venue_path(@venue), method: :patch, local: true, class: "inline-flex items-center justify-center gap-2 rounded-lg px-4 py-2.5 font-medium bg-blue-500 text-white hover:opacity-90 transition-all" %>
          </div>
        </div>
      <% else %>
        <div class="space-y-4">
          <p class="text-[color:var(--muted)]">No active session running.</p>
          <p class="text-[color:var(--muted)]">Start a session to begin accepting song requests from users.</p>
          <%= button_to "Start New Session", start_session_host_venue_path(@venue), method: :post, class: "w-full inline-flex items-center justify-center gap-2 rounded-lg px-4 py-2.5 font-medium bg-[color:var(--primary)] text-white hover:opacity-90 transition-all" %>
        </div>
      <% end %>
    </div>

    <div class="rounded-2xl border border-white/10 bg-[color:var(--bg-elev)] shadow-lg p-8">
      <h2 class="text-2xl font-bold mb-4">Venue Settings</h2>
      <div class="flex flex-wrap gap-4">
        <%= link_to "âœï¸ Edit Venue", edit_host_venue_path(@venue), class: "inline-flex items-center justify-center gap-2 rounded-lg px-4 py-2.5 font-medium bg-gray-500 text-white hover:opacity-90 transition-all" %>
        <%= button_to "ğŸ—‘ï¸ Delete Venue", host_venue_path(@venue), method: :delete, data: { confirm: "Are you sure?" }, class: "inline-flex items-center justify-center gap-2 rounded-lg px-4 py-2.5 font-medium bg-red-500 text-white hover:opacity-90 transition-all" %>
      </div>
    </div>
  </div>

  <div class="mt-8 text-center">
    <%= link_to "â† Back to Venues", host_venues_path, class: "text-[color:var(--primary)] hover:underline" %>
  </div>
</div>