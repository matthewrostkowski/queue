<div class="max-w-4xl mx-auto">
  <div class="rounded-2xl border border-white/10 bg-[color:var(--bg-elev)] shadow-lg p-8" data-testid="profile-page">
    <div class="mb-8">
      <h1 class="text-3xl font-bold mb-2">@<%= @user.display_name %></h1>
      <p class="text-[color:var(--muted)] text-lg">Your Queue activity and contributions</p>
    </div>

    <!-- Stats Summary -->
    <div class="grid grid-cols-2 gap-6 mb-10 p-6 bg-white/5 rounded-xl">
      <div class="text-center">
        <div class="text-4xl font-black text-[color:var(--primary)] mb-1"><%= @summary[:queued_count] %></div>
        <div class="text-xs uppercase tracking-wider text-[color:var(--muted)] font-medium">Songs Queued</div>
      </div>
      <div class="text-center">
        <div class="text-4xl font-black text-[color:var(--primary)] mb-1"><%= @summary[:upvotes_total] %></div>
        <div class="text-xs uppercase tracking-wider text-[color:var(--muted)] font-medium">Total Upvotes</div>
      </div>
    </div>

    <!-- Queue Items List -->
    <h2 class="text-xl font-bold mb-4">Songs I've Queued</h2>
    
    <% if @queue_items.any? %>
      <div class="space-y-3">
        <% @queue_items.each do |queue_item| %>
          <div class="flex items-center gap-4 p-4 bg-white/5 border border-white/10 rounded-xl hover:bg-white/10 transition-colors">
            <!-- Album Art -->
            <% if queue_item.song.respond_to?(:album_art_url) && queue_item.song.album_art_url.present? %>
              <img src="<%= queue_item.song.album_art_url %>" 
                   alt="<%= queue_item.song.title %>" 
                   class="w-14 h-14 rounded-lg object-cover flex-shrink-0">
            <% else %>
              <div class="w-14 h-14 rounded-lg bg-[color:var(--primary)] flex items-center justify-center text-2xl font-bold text-gray-900 flex-shrink-0">
                <%= queue_item.song.title[0].upcase %>
              </div>
            <% end %>
            
            <!-- Song Info -->
            <div class="flex-1 min-w-0">
              <div class="font-bold text-sm truncate">
                <%= queue_item.song.title %>
              </div>
              <div class="text-xs text-[color:var(--muted)] truncate">
                <%= queue_item.song.artist %>
              </div>
              <div class="flex flex-wrap gap-2 mt-1.5 text-xs text-[color:var(--muted)]">
                <span class="px-2 py-0.5 bg-[color:var(--primary)] text-gray-900 rounded font-bold uppercase">
                  <%= queue_item.status %>
                </span>
                <span><%= time_ago_in_words(queue_item.created_at) %> ago</span>
                <span>$<%= queue_item.base_price %></span>
              </div>
            </div>
            
            <!-- Upvote Count -->
            <div class="flex items-center gap-2 px-4 py-2 bg-[color:var(--primary)] text-gray-900 rounded-lg font-bold text-lg flex-shrink-0">
              <span>üëç</span>
              <span><%= queue_item.vote_count %></span>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12 px-6 bg-white/5 rounded-xl">
        <div class="text-5xl mb-3 opacity-50">üéµ</div>
        <p class="text-[color:var(--muted)] mb-2">You haven't queued any songs yet.</p>
        <p class="text-[color:var(--muted)] text-sm">Visit a venue and add your first song to the queue!</p>
      </div>
    <% end %>
    
    <div class="mt-8 text-center">
      <%= link_to "Back to Main", mainpage_path, class: "text-[color:var(--primary)] hover:underline font-medium" %>
    </div>
  </div>
</div>
