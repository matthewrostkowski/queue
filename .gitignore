**/.DS_Store
Thumbs.db
*.swp
*.swo
.idea/
.vscode/

# --- Bundler ------------------------------------------------------------------
/.bundle
/vendor/bundle/

# --- Environment / credentials ------------------------------------------------
/.env*
/.env.*.local
/config/master.key
/config/credentials/*.key

